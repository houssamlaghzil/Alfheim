rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /models/{userId}/{allPaths=**} {
      // Autorise l’écriture SI l’utilisateur est connecté ET que son UID === userId
      allow write: if request.auth != null && request.auth.uid == userId;
      // Autorise la lecture pour tous les authentifiés (ou tout le monde si tu veux public)
      allow read: if true;
    }
    // Autres dossiers, par défaut interdire
    match /{allOtherPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
